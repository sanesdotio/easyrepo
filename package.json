{
  "name": "easyrepo",
  "version": "1.0.0",
  "description": "Easy Git repository setup in one step",
  "main": "main.ts",
  "type": "module",
  "bin": {
    "easyrepo": "dist/main.js"
  },
  "scripts": {
    "dev": "tsx --env-file=.env src/main.ts",
    "build": "./node_modules/.bin/esbuild src/main.ts --bundle --platform=node --outfile=dist/main.cjs",
    "export": "pkg dist/main.cjs --targets node20-macos-x64 --output exes/easyrepo"
  },
  "keywords": [],
  "author": "Sander Neset",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.7.6",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "esbuild": "0.24.0",
    "eslint": "^9.13.0",
    "eslint-plugin-node": "^11.1.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "@octokit/rest": "^21.0.2",
    "open": "^10.1.0",
    "simple-git": "^3.27.0"
  }
}
